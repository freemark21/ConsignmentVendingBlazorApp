@page "/deletereturn/{id:int}"

@using DataAccessLibrary
@using DataAccessLibrary.Models

@inject NavigationManager NavigationManager
@inject IReturnsData _db

<h3>Confirm Delete</h3>
<p>Are you sure you want to delete this return with ID: <b>@id</b></p>
<br />
<div class="col-md-4">
    <table class="table">
        <thead>
            <tr>
                <th>Cono</th>
                <th>Customer Number</th>
                <th>Ship To</th>
                <th>Replenex Number</th>
                <th>Qty</th>
                <th>Whse</th>
            </tr>
        </thead>
        <tr>
            <td>@item.Cono</td>
            <td>@item.CustomerNumber</td>
            <td>@item.ShipTo</td>
            <td>@item.ReplenexNumber</td>
            <td>@item.Qty</td>
            <td>@item.Whse</td>
        </tr>
    </table>
</div>
@code {
    [Parameter]
    public int id { get; set; }
    private ReturnModel item;

    protected override async Task OnInitializedAsync()
    {
        item = await _db.GetSingleReturn(id);
    }
}
